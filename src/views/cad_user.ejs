    <link href="https://fonts.googleapis.com/css2?family=Merriweather&display=swap" rel="stylesheet">
    <!-- fonts links -->
</head>
<body>

  <%- include('components/header') %>
    
   <div class="container" id="login">
    <div class="row">
        <div class="col-md-5 py-3 py-md-0" id="side1">
            <h3 class="text-center">Cadastre-se</h3>
        </div>
        <div class="col-md-7 py-3 py-md-0" id="side2">
            <h3 class="text-center">Criar uma conta</h3>

            <div class="input2 text-center">
            <input class="inputs required" type="text" oninput="nameValidate()" id="nome" placeholder="Nome">
            <span class="span-required">Nome deve ter no mínimo 5 caracteres</span>

            <input class="inputs required" type="number" oninput="telValidate()" id="telefone" placeholder="Telefone">
            <span class="span-required">Informe um telefone valido</span>

            <input class="inputs required" type="text" oninput="emailValidate()" id="email" placeholder="Email">
            <span class="span-required">Informe um email valido</span>

            <input class="inputs required" type="text" oninput="cidadeValidate()" id="cidade" placeholder="Cidade">
            <span class="span-required">Informe uma cidade valida</span>

            <input class="inputs required" type="text" oninput="estadoValidate()" id="estado" placeholder="Estado-UF">
            <span class="span-required">Informe um estado valido</span>

            <input class="inputs required" type="password" oninput="mainPasswValidate()" id="senha" placeholder="Password">
            <span class="span-required">A senha deve conter pelo menos 8 caracteres</span>

            </div>
            <p class="text-center" id="btnlogin"><a href="#" onclick="cadastrar()">Cadastre-se</a></p>
            <span class="span-required">ERRO ao Criar o Usuário!</span>
        </div>

    </div>
   </div>






    <%- include('components/footer') %>






    <a href="#" class="arrow"><i><img src="./images/arrow.png" alt=""></i></a>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <script src="./scripts/scrpValCadUser.js"></script>

</body>
</html>